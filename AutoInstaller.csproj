<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net10.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<!-- UTF-8 desteği -->
		<UseUTF8Encoding>true</UseUTF8Encoding>
		<LangVersion>latest</LangVersion>

		<!-- Sürüm bilgileri -->
		<AssemblyVersion>1.0.0.0</AssemblyVersion>
		<FileVersion>1.0.0.0</FileVersion>
		<Version>1.0.0</Version>
		
		<!-- Manifest dosyası -->
		<ApplicationManifest>app.manifest</ApplicationManifest>

		<!-- Assembly bilgileri -->
		<AssemblyTitle>Auto Installer</AssemblyTitle>
		<Product>Auto Installer</Product>
		<Company>MA Software</Company>
		<Copyright>Copyright © 2025 MA Software</Copyright>
		<Description>Sık kullanılan yazılımların kurulumlarını otomatikleştirir</Description>
		<NeutralLanguage>tr-TR</NeutralLanguage>
		
		<!-- Dosya bilgileri -->
		<AssemblyName>AutoInstaller</AssemblyName>
	</PropertyGroup>

	<ItemGroup>
	  <PackageReference Include="Spectre.Console" Version="0.54.0" />
	</ItemGroup>

</Project>
